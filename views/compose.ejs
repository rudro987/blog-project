<%- include('./partials/header') %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" name="postTitle" id="post-title" class="form-control">
        <label for="post-body">Post</label>
        <textarea name="postBody" class="form-control" id="post-body" cols="40" rows="5"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>
<%- include('./partials/footer') %>